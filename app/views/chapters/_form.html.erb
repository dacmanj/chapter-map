<%= simple_nested_form_for(@chapter) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category, :collection => { :Chapter => "Chapter", :Representative => "Representative" } %>
    <%= f.input :website %>
    <%= f.input :street, :as => :text, :input_html => { :cols => 40, :rows => 3 } %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :email_1 %>
    <%= f.input :email_2 %>
    <%= f.input :email_3 %>
    <%= f.input :helpline %>
    <%= f.input :phone_1 %>
    <%= f.input :phone_2 %>
    <%= f.label :geocode do %>
      <%= check_box_tag :geocode %>Refresh Latitude/Longitude
    <% end %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= if admin_user? 
          f.input :ein 
        else
          f.input :ein, :readonly => true 
        end %>
    <%= f.input :separate_exemption %>
    <%= f.input :inactive %>
    <%= f.input :database_identifier %>
    <%= f.input :chapter_legacy_identifier %>
    <div>

    <%= f.fields_for :assets do |asset_form| %>
      <%= asset_form.label :tag %>
      <%= asset_form.text_field :tag %>
      <%= asset_form.file_field :attachment %>
      <%= "<a href='#{asset_form.object.attachment}'>#{asset_form.object.attachment_file_name}</a>".html_safe %>
      <%= asset_form.link_to_remove "Remove this file" %>
    <% end %>
    <p><%= f.link_to_add "Add a file", :assets %></p>
    </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to content_tag(:i, "", class: "icon-trash icon-white") + ' Delete', @chapter, method: :delete, :class => "btn btn-danger" %>

  </div>
<% end %>
