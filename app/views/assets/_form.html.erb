<%= simple_nested_form_for(@asset) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label :id %><%= @asset.id %>
	<%= f.label :created_at %><%= @asset.created_at %>
	<%= f.label :attachment_file_name %>
	<%= f.association :chapter, prompt: "Select a chapter..." %>
	<%= f.input :tag, collection: Asset.tags, prompt: "Select a tag..." %>
	<%= f.label :attachment_file_name %><%= @asset.attachment_file_name %>
	<%= f.label :attachment_content_type %><%= @asset.attachment_content_type %>
	<%= f.label :attachment_file_size %><%= @asset.attachment_file_size %>
	<%= f.label :attachment_updated_at %><%= @asset.attachment_updated_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to content_tag(:i, "", class: "icon-trash icon-white") + ' Delete', @asset, method: :delete, :class => "btn btn-danger" unless !admin_user? %>

  </div>
<% end %>
