<div class="col-md-offset-4 col-md-4">
<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <%= f.input :name, :autofocus => true %>
  <%= f.input :email, :required => true %>
  <%= f.input :password, :autocomplete => "off", :hint => "Leave blank if you don't want to change your password", :required => false %>
  <%= f.input :password_confirmation, :required => false %>
  
  <%= f.input :current_password, :hint => ( @user.password_required? ? "We need your current password to confirm your changes" : "Password has not been set yet"), :required => @user.password_required?, :disabled => !@user.password_required?  %>
<% if @user.password_required? %>
<%end%>
  <%= f.button :submit, 'Update', :class => 'btn btn-primary' %>
<% end %>
<h3>Delete my account</h3>
<div><%= link_to glyph("trash"), registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-danger"%></div>
</div>
